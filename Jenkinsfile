pipeline {
  
       agent any
  stages{
    stage("build"){
      steps{
        echo 'building the given application..'
      }
    }
    stage("test"){
      steps{
        echo 'testing the given application..'
      }
    }
    stage("deploy"){
      steps{
        echo 'deploying the given application..'
      }
    }
      stage("release"){
      steps{
        echo 'releasing the given application..'
      }
    }
  }
}
